<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/themeSelectorSettingCL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/themeSelectorSettingIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rounded_brightness_auto_24" />

    <TextView
        android:id="@+id/themeSelectorSettingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/settings_theme"
        app:layout_constraintBottom_toBottomOf="@+id/themeSelectorSettingIcon"
        app:layout_constraintStart_toEndOf="@+id/themeSelectorSettingIcon"
        app:layout_constraintTop_toTopOf="@+id/themeSelectorSettingIcon" />

    <TextView
        android:id="@+id/themeSelectorSettingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/settings_theme_system"
        app:layout_constraintBottom_toBottomOf="@+id/themeSelectorSettingLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/themeSelectorSettingLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>